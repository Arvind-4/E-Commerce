{
  "name": "solidjs-vite-tailwindcss-ecommerce",
  "version": "1.0.0",
  "description": "Ecommerce Frontend for Django Backend",
  "author": {
    "name": "Arvind",
    "email": "lordarvindthegamer@gmail.com",
    "url": "https://arvind11.tk"
  },
  "scripts": {
    "watch:js": "",
    
    "build:js": "rm -rf ../web/static-dev/js/*.js && rm -rf ../web/static-dev/css/index.min.css && vite build && cd ../web/static-dev/js && rm -rf *.html *.json && mv assets/index.*.js index.min.js && mv assets/vendor.*.js ./ && mv assets/index.*.css ../css/index.min.css && rm -rf assets",

    "watch:css": "rm -rf ../web/static-dev/js/tailwind.min.css && tailwind build -i style.css -o ../web/static-dev/js/tailwind.min.css --watch --minify",

    "build:css": "rm -rf ../web/static-dev/js/tailwind.min.css && NODE_ENV=production postcss ./src/index.css -o ../web/static-dev/css/tailwind.min.css",

    "production": "yarn build:css && yarn build:js"
  },
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "vite-plugin-solid": "^2.2.1",
    "win-node-env": "^0.6.0"
  },
  "dependencies": {
    "solid-app-router": "^0.2.1",
    "solid-js": "^1.3.2"
  }
}
